<h1>Edit An Article</h1>

<%= form_for(@article) do |f| %>
		<p>
			<div id="title_block">
				<%= f.label :title %>
				<%= f.text_field :title, size:75, id:"title_field" %>
			</div>
			<div id="text_block">
				<%= f.label :text %>
				<%= f.text_area :text, cols:25, id:"article_text_field" %>
			</div>
		</p>
	<%= f.submit value:"Submit Correction", class:"publish_button" %>
<% end %>
<br>
<%= link_to 'Cancel', articles_path %>